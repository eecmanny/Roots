<nav class="navbar" role="navigation" aria-label="main navigation">
  <div class="navbar-brand">
    <a class="navbar-item" href="/">Roots</a>
    <img src="/assets/images/Family-Tree-PNG-Picture.png" alt="logo" style="width:75px;height:75px;">

    
